@model GameViewModel

@{
    ViewData["Title"] = "Admin - Game Management";
}

<div class="container-fluid">
    <div class="row">
        
        <partial name="_AdminSideMenuPartial" />

        <!-- Main Content -->
        <main class="col-md-8 ms-sm-auto col-lg-9 px-md-4">
            <div class="py-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Game Management</li>
                    </ol>
                </nav>
            </div>

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h1 class="h2">Game Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a class="btn btn-success" asp-controller="Admin" asp-action="CreateGame">
                        <i class="bi bi-plus-circle me-1"></i>
                        Add New Game
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-body">
                    <form class="row g-3">
                        <div class="col-md-7">
                            <label for="searchGame" class="form-label">Search</label>
                            <input type="text" class="form-control" id="searchGame" placeholder="Game name...">
                        </div>
                        <div class="col-md-3">
                            <label for="filterCategory" class="form-label">Category</label>
                            <select class="form-select" style="font-size: 11px" id="filterCategory" multiple>
                                <option>Select Categorie(s)</option>
                                @if (Model.CategoriesDtos != null && Model.CategoriesDtos.Any())
                                {
                                    @foreach (var category in Model.CategoriesDtos)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-secondary w-100">
                                <i class="bi bi-funnel me-1"></i>
                                Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Games Table -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Prix</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.GamesDtos != null && Model.GamesDtos.Any())
                                {
                                    @foreach (var game in Model.GamesDtos)
                                    {
                                        <tr>
                                            <th scope="row">@game.Id</th>
                                            <td>
                                                <img src="@(game.CoverImage)" width="50" height="50" alt="@(game.CoverImage)">
                                            </td>
                                            <td>@(game.Name)</td>
                                            <td>@(game.Description)</td>
                                            <td>@(game.Price)</td>
                                            <td>
                                                <a class="btn btn-sm btn-primary me-1">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button
                                                    class="btn btn-sm btn-danger"
                                                    data-bs-toggle="modal" data-bs-target="cd"
                                                >
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            No games found. Create a game !
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <nav aria-label="Game table pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                    
                </div>
            </div>
        </main>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#filterCategory').select2({
                theme: 'bootstrap-5',
                placeholder: 'Select categories',
                allowClear: true,
                closeOnSelect: false
            });
        });
    </script>
}

<style>
    .sidebar {
        position: sticky;
        top: 0;
        height: 100vh;
        overflow-y: auto;
    }
    
    .sidebar .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        transition: all 0.3s;
    }
    
    .sidebar .nav-link:hover {
        background-color: #e9ecef;
    }
    
    .sidebar .nav-link.active {
        background-color: #0d6efd;
        color: white;
    }
    
    .sidebar-heading {
        font-size: 0.75rem;
        text-transform: uppercase;
    }
</style>