@model GameViewModel

@{
    ViewData["Title"] = "Admin - Game Management";
}

<div class="container-fluid">
    <div class="row">
        
        <partial name="_AdminSideMenuPartial" />

        <!-- Main Content -->
        <main class="col-md-8 ms-sm-auto col-lg-9 px-md-4">
            <div class="py-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Game Management</li>
                    </ol>
                </nav>
            </div>

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h1 class="h2">Game Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a class="btn btn-success" asp-controller="Game" asp-action="CreateGame">
                        <i class="bi bi-plus-circle me-1"></i>
                        Add New Game
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <div class="accordion mb-4" id="filterAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilter" aria-expanded="true" aria-controls="collapseFilter">
                            <i class="bi bi-funnel me-2"></i>Filters
                        </button>
                    </h2>
                    <div id="collapseFilter" class="accordion-collapse collapse show" data-bs-parent="#filterAccordion">
                        <div class="accordion-body">
                            <form class="row g-3" method="get">
                                <div class="col-md-12">
                                    <label for="searchGame" class="form-label fw-semibold">
                                        <i class="bi bi-search me-1"></i>Search by Name
                                    </label>
                                    <input type="text" class="form-control" id="searchGame" name="searchTerm" placeholder="Enter game name..." value="@Model.SearchTerm">
                                </div>
                                
                                <div class="col-md-12">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-tags me-1"></i>Categories
                                    </label>
                                    <div class="categories-filter-container p-3 border rounded bg-light">
                                        @if (Model.CategoriesDtos != null && Model.CategoriesDtos.Any())
                                        {
                                            <div class="row g-2">
                                                @foreach (var category in Model.CategoriesDtos)
                                                {
                                                    <div class="col-md-4 col-lg-3">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" 
                                                                   name="categoryIds" value="@category.Id" 
                                                                   id="cat_@category.Id"
                                                                   @(Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "")>
                                                            <label class="form-check-label" for="cat_@category.Id">
                                                                @category.Name
                                                            </label>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0">No categories available</p>
                                        }
                                    </div>
                                </div>
                                
                                <div class="col-md-12">
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-funnel me-1"></i>
                                            Apply Filters
                                        </button>
                                        <a href="@Url.Action("Games", "Admin")" class="btn btn-outline-secondary">
                                            <i class="bi bi-x-circle me-1"></i>
                                            Clear Filters
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Games Table -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Prix</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.GamesDtos != null && Model.GamesDtos.Any())
                                {
                                    @foreach (var game in Model.GamesDtos)
                                    {
                                        <tr>
                                            <th scope="row">@game.Id</th>
                                            <td>
                                                <img src="@(game.CoverImage)" width="50" height="50" alt="@(game.CoverImage)">
                                            </td>
                                            <td>@(game.Name)</td>
                                            <td>@(game.Description)</td>
                                            <td>@(game.Price) €</td>
                                            <td>
                                                <a asp-controller="Game" asp-action="UpdateGame" asp-route-id="@game.Id" class="btn btn-sm btn-primary me-1">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button
                                                    class="btn btn-sm btn-danger"
                                                    data-bs-toggle="modal" data-bs-target="#deleteGameModal@(game.Id)"
                                                >
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        
                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteGameModal@(game.Id)" tabindex="-1" aria-labelledby="deleteGameModalLabel@(game.Id)" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="deleteGameModalLabel@(game.Id)">Suppression de jeu</h1>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Êtes-vous sûr de vouloir supprimer le jeu : <strong>@game.Name</strong> ?</p>
                                                        <div class="alert alert-warning">
                                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                                            Cette action est irréversible et supprimera également les fichiers associés.
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            <i class="bi bi-x-circle me-1"></i>
                                                            Annuler
                                                        </button>
                                                        <form asp-controller="Game" asp-action="DeleteGame" asp-route-id="@game.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="bi bi-trash me-1"></i>
                                                                Supprimer
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            No games found. Create a game !
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Game table pagination" class="mt-3">
                            <ul class="pagination justify-content-center mb-0">
                                <!-- Previous Button -->
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Games", "Admin", new { 
                                        searchTerm = Model.SearchTerm, 
                                        categoryIds = Model.SelectedCategoryIds, 
                                        page = Model.CurrentPage - 1 
                                    })">
                                        <i class="bi bi-chevron-left"></i> Previous
                                    </a>
                                </li>

                                @{
                                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                }

                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Games", "Admin", new { 
                                            searchTerm = Model.SearchTerm, 
                                            categoryIds = Model.SelectedCategoryIds, 
                                            page = 1 
                                        })">1</a>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Games", "Admin", new { 
                                            searchTerm = Model.SearchTerm, 
                                            categoryIds = Model.SelectedCategoryIds, 
                                            page = i 
                                        })">@i</a>
                                    </li>
                                }

                                @if (endPage < Model.TotalPages)
                                {
                                    @if (endPage < Model.TotalPages - 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Games", "Admin", new { 
                                            searchTerm = Model.SearchTerm, 
                                            categoryIds = Model.SelectedCategoryIds, 
                                            page = Model.TotalPages 
                                        })">@Model.TotalPages</a>
                                    </li>
                                }

                                <!-- Next Button -->
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Games", "Admin", new { 
                                        searchTerm = Model.SearchTerm, 
                                        categoryIds = Model.SelectedCategoryIds, 
                                        page = Model.CurrentPage + 1 
                                    })">
                                        Next <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        
                        <div class="text-center text-muted mt-2">
                            <small>Page @Model.CurrentPage of @Model.TotalPages</small>
                        </div>
                    }
                    
                </div>
            </div>
        </main>
    </div>
</div>


@section Scripts {
    <script>
        // Amélioration de l'UI des checkboxes
        $(document).ready(function() {
            $('.categories-filter-container .form-check-input').on('change', function() {
                var checkedCount = $('.categories-filter-container .form-check-input:checked').length;
                if (checkedCount > 0) {
                    $('.categories-filter-container').addClass('border-primary');
                } else {
                    $('.categories-filter-container').removeClass('border-primary');
                }
            });
        });
    </script>
}

<style>
    .sidebar {
        position: sticky;
        top: 0;
        height: 100vh;
        overflow-y: auto;
    }
    
    .sidebar .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        transition: all 0.3s;
    }
    
    .sidebar .nav-link:hover {
        background-color: #e9ecef;
    }
    
    .sidebar .nav-link.active {
        background-color: #0d6efd;
        color: white;
    }
    
    .sidebar-heading {
        font-size: 0.75rem;
        text-transform: uppercase;
    }
</style>