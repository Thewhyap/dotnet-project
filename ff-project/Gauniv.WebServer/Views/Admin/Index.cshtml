@{
    ViewData["Title"] = "Admin - Game Management";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left Sidebar Menu -->
        <nav class="col-md-4 col-lg-3 d-md-block bg-light sidebar border-end rounded-3">
            <div class="position-sticky pt-3">
                <h5 class="sidebar-heading px-3 mt-2 mb-3 text-muted">
                    <span>Admin Panel</span>
                </h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-controller me-2"></i>
                            Game Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-tags me-2"></i>
                            Category Management
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-8 ms-sm-auto col-lg-9 px-md-4">
            <div class="py-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                    </ol>
                </nav>
            </div>

            <div>
                <div>
                    Total JEU : 15
                </div>
                <div>
                    Total Category : 15
                </div>
            </div>
            
        </main>
    </div>
</div>

<style>
    .sidebar {
        position: sticky;
        top: 0;
        height: 100vh;
        overflow-y: auto;
    }
    
    .sidebar .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        transition: all 0.3s;
    }
    
    .sidebar .nav-link:hover {
        background-color: #e9ecef;
    }
    
    .sidebar .nav-link.active {
        background-color: #0d6efd;
        color: white;
    }
    
    .sidebar-heading {
        font-size: 0.75rem;
        text-transform: uppercase;
    }
</style>