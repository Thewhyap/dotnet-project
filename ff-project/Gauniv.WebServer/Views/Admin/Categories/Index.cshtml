@model CategoryViewModel

@{
    ViewData["Title"] = "Admin - Categories Management";
}

<div class="container-fluid">
    <div class="row">
        
        <partial name="_AdminSideMenuPartial" />

        <!-- Main Content -->
        <main class="col-md-8 ms-sm-auto col-lg-9 px-md-4">
            <div class="py-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Categories Management</li>
                    </ol>
                </nav>
            </div>

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
                <h1 class="h2">Category Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-success" >
                        <i class="bi bi-plus-circle me-1"></i>
                        Add New Category
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <!-- Filters -->
            <div class="accordion mb-4" id="filterAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilter" aria-expanded="true" aria-controls="collapseFilter">
                            <i class="bi bi-funnel me-2"></i>Filters
                        </button>
                    </h2>
                    <div id="collapseFilter" class="accordion-collapse collapse show" data-bs-parent="#filterAccordion">
                        <div class="accordion-body">
                            <form class="row g-3" method="get">
                                <div class="col-md-10">
                                    <label for="searchCategory" class="form-label fw-semibold">
                                        <i class="bi bi-search me-1"></i>Search by Name
                                    </label>
                                    <input type="text" class="form-control" id="searchCategory" name="searchTerm" placeholder="Category name..." value="@Model.SearchTerm">
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <div class="d-flex flex-column gap-2 w-100">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-funnel me-1"></i>
                                            Filter
                                        </button>
                                        <a href="@Url.Action("Categories", "Admin")" class="btn btn-outline-secondary w-100">
                                            <i class="bi bi-x-circle me-1"></i>
                                            Clear
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Games Table -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CategoriesDtos != null && Model.CategoriesDtos.Any())
                                {
                                    @foreach (var category in Model.CategoriesDtos)
                                    {
                                        <tr>
                                            <th scope="row">@category.Id</th>
                                            <td>@category.Name</td>
                                            <td>@category.Description</td>
                                            <td>
                                                <a asp-controller="Admin" asp-action="UpdateCategory" asp-route-id="@category.Id" class="btn btn-sm btn-primary me-1">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button
                                                    class="btn btn-sm btn-danger"
                                                    data-bs-toggle="modal" data-bs-target="#deleteCategoryModal@(category.Id)"
                                                >
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        
                                        <div class="modal fade" id="deleteCategoryModal@(category.Id)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="deleteCategoryModal@(category.Id)">Suppression</h1>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Êtes vous sur de vouloir supprimer cette catégory : @category.Name
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <form asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-danger">
                                                                <i class="bi bi-trash"></i> Supprimer
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">
                                            No categories found. Create your first category!
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Category table pagination" class="mt-3">
                            <ul class="pagination justify-content-center mb-0">
                                <!-- Previous Button -->
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Categories", "Admin", new { 
                                        searchTerm = Model.SearchTerm, 
                                        page = Model.CurrentPage - 1 
                                    })">
                                        <i class="bi bi-chevron-left"></i> Previous
                                    </a>
                                </li>

                                @{
                                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                }

                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Categories", "Admin", new { 
                                            searchTerm = Model.SearchTerm, 
                                            page = 1 
                                        })">1</a>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Categories", "Admin", new { 
                                            searchTerm = Model.SearchTerm, 
                                            page = i 
                                        })">@i</a>
                                    </li>
                                }

                                @if (endPage < Model.TotalPages)
                                {
                                    @if (endPage < Model.TotalPages - 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Categories", "Admin", new { 
                                            searchTerm = Model.SearchTerm, 
                                            page = Model.TotalPages 
                                        })">@Model.TotalPages</a>
                                    </li>
                                }

                                <!-- Next Button -->
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Categories", "Admin", new { 
                                        searchTerm = Model.SearchTerm, 
                                        page = Model.CurrentPage + 1 
                                    })">
                                        Next <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        
                        <div class="text-center text-muted mt-2">
                            <small>Page @Model.CurrentPage of @Model.TotalPages</small>
                        </div>
                    }
                    
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .sidebar {
        position: sticky;
        top: 0;
        height: 100vh;
        overflow-y: auto;
    }
    
    .sidebar .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        border-radius: 0.25rem;
        transition: all 0.3s;
    }
    
    .sidebar .nav-link:hover {
        background-color: #e9ecef;
    }
    
    .sidebar .nav-link.active {
        background-color: #0d6efd;
        color: white;
    }
    
    .sidebar-heading {
        font-size: 0.75rem;
        text-transform: uppercase;
    }
</style>